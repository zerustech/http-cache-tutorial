default_base=$(dirname `cd -P $(dirname $BASH_SOURCE) && pwd`) && source $default_base/../../bootstrap.sh
runtime_base=$(dirname `cd $(dirname $BASH_SOURCE) && pwd`)

# This script accepts optional arguments for starting a php builtin server from
# command line. It is a wrapper to the php.service script.
# 
# @author Michael Lee <michael.lee@zerustech.com>

socket="0.0.0.0:8000"
doc_root=$runtime_base/web

function usage()
{
    printf "php.start: usage: php.start [-S host:port] [-t doc_root] [arguments ...]\n"
    exit 0
}

while getopts "S:t:" opt; do

    case $opt in

        S) socket="$OPTARG";;

        t) doc_root="$OPTARG";;

        *) usage;;

    esac

done

shift $((OPTIND - 1))

$app_vendor_zerustech_cli_bin/php/php.service -h "$php_home" -S "$socket" -t "$doc_root" start "$@"
